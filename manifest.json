{
    "manifest_version": 2,
    "name": "Stay Productive",
    "version": "1.0.0",
    "description":"Blocks the social media to be more productive",
    "content_scripts":[
        {
            "matches": ["<all_urls>"],
            "js": ["main.js"]
        }
    ],
    "icons": { 
        "16":  "images/16.png",
        "48":  "images/48.png",
        "128": "images/128.png" 
    },
    "browser_action": {
        "default_icon": "images/16.png",
        "default_popup": "PopUp/popup.html"
    },
    "permissions": [
        "activeTab"
    ]
}

